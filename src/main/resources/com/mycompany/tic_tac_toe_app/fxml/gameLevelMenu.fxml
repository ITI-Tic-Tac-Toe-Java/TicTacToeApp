<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
           prefHeight="350.0" prefWidth="350.0"
           styleClass="transparent-pane" stylesheets="@../styles/style.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.tic_tac_toe_app.controllers.GameLevelMenuController">
           
    <VBox alignment="CENTER" maxWidth="280" spacing="15">
        <Label styleClass="label" text="TIC TAC YOU" />
        
        <Button maxWidth="Infinity" onAction="#handleEasyGame" styleClass="button" text="EASY" />
        <Button maxWidth="Infinity" onAction="#handleMediumGame" styleClass="button" text="MEDIUM" />
        <Button maxWidth="Infinity" onAction="#handleHardGame" styleClass="button" text="HARD" />
    </VBox>
    <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleBackToMenu" styleClass="customized-button" text="MENU">
        <graphic>
            <ImageView fitHeight="49.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/button_style.png" />
                </image>
            </ImageView>
        </graphic>
        <StackPane.margin>
            <Insets top="481.0" />
        </StackPane.margin>
    </Button>
</StackPane>