<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane prefHeight="350" prefWidth="350" style="-fx-background-color: transparent;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.tic_tac_toe_app.controllers.SetPlayersNameController">

    <VBox alignment="CENTER_LEFT" maxWidth="280" spacing="12" styleClass="main-container">
        <Label styleClass="label" text="PLAYER X" />
        
        <TextField fx:id="playerXName" promptText="First Player Name" styleClass="text-field">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </TextField>
        <Label layoutX="81.0" layoutY="113.0" styleClass="label" text="PLAYER O" />
        <TextField fx:id="playerOName" layoutX="10.0" layoutY="162.0" promptText="Second Player Name" styleClass="text-field">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </TextField>
        <Button maxWidth="Infinity" onAction="#handleStartGame" styleClass="button" text="Start Game" />
    </VBox>
    <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleBackToMenu" styleClass="customized-button" text="MENU">
        <graphic>
            <ImageView fitHeight="49.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/button_style.png" />
                </image>
            </ImageView>
        </graphic>
        <StackPane.margin>
            <Insets top="481.0" />
        </StackPane.margin>
    </Button>
</StackPane>
