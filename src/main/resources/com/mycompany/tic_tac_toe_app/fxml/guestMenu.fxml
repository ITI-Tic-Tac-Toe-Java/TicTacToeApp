<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
           prefHeight="350.0" prefWidth="350.0"
           styleClass="transparent-pane" stylesheets="@../styles/style.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.tic_tac_toe_app.controllers.GuestMenuController">
           
    <VBox alignment="CENTER" maxWidth="280" spacing="15">
        <Label styleClass="label" text="TIC TAC YOU" />
        
        <Button maxWidth="Infinity" onAction="#handleComputerGame" styleClass="button" text="Play with Computer" />
        <Button maxWidth="Infinity" onAction="#handleMultiplayerGame" styleClass="button" text="Multiplayer Game" />
        <Button maxWidth="Infinity" onAction="#handleOnlineGame" styleClass="button" text="Online Game" />
    </VBox>
</StackPane>